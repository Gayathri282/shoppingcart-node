<section>
    <div class="container">
        <div class="flex col-md-6 col-12">
            <form id="checkoutForm">
                <h2>Delivery Address</h2>
                <div class="form-group">
                    <label for="exampleInputEmail1">Address</label>
                    <input type="text" class="form-control" id="exampleInputEmail1"   aria-describedby="emailHelp" name="address" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Pincode</label>
                    <input type="text" class="form-control" id="exampleInputPassword1" name="pincode" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Phone</label>
                    <input type="tel" class="form-control" id="exampleInputPassword1" name="phone" required>
                </div>
                <input type="text" name="userId" value="{{user._id}}" hidden>
               
               
        </div>
        <div class="flex col-md-6 col-12">
            <div class="box">
                <h4>Total Amount:{{total}}</h4>
                <hr>
                <h5>Payment Method</h5>
                <input type="radio" name="paymentMethod" value="COD" class="mt-4" checked>Cash On Delivery <br>
                <input type="radio" name="paymentMethod" value="online" class="mt-2">Online Payment <br>
                <input type="submit" class="btn btn-success mt-5 w-100" value="Checkout">
            </div>
        </div>
         </form>
    </div>
</section>
<style>
    @media(min-width:786px){
        .container{
            display: flex;
            gap: 2rem;
        }

    }
    .container{
        align-items: center;
        justify-content: center;
        margin: auto;
        
        
    }
    .box{
        border: 1px solid black;
        border-radius: 20px;
        padding: 50px;
    }
</style>
