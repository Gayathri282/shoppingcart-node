<section>
    <div class="container">
        <div class="row mt-3">
            <a href="/admin/addProduct" class="btn btn-success m-auto w-50">Add Product</a>
        </div>
        <table class="table mt-4" id="productsTable">
  <thead>
    <tr>
      {{!-- <th scope="col">Number</th> --}}
      <th scope="col">Name</th>
      <th scope="col">Image</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>

    </tr>
  </thead>
  <tbody>
            {{#each products}}
    <tr>
      {{!-- <th scope="row">1</th> --}}
      <td>{{this.name}}</td>
      <td><img src="/productImages/{{this._id}}.jpg" alt=""></td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td>&#8377;{{this.price}}</td>
      <td><a href="/admin/editProduct/{{this._id}}" class="btn btn-primary">Edit</a></td>
      <td><a href="/admin/deleteProduct?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.name}}')">X</a></td>
    </tr>
          {{/each}}
  </tbody>
</table>
    </div>
</section>
