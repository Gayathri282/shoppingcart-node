<section>
    <div class="container">
        <div class="row mt-3">
            <a href="/admin/addProduct" class="btn btn-success m-auto w-50">Add Product</a>
        </div>
        <table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">Date</th>
      {{!-- <th scope="col">Name</th> --}}
      <th scope="col">Payment Method</th>
      <th scope="col">Status</th>
      <th scope="col">Total</th>
     
    </tr>
  </thead>
  <tbody>
            {{#each orders}}
    <tr>
      <th scope="row">{{this.date}}</th>
      {{!-- <td>{{this.name}}</td> --}}
      <td>{{this.paymentMethod}}</td>
      <td>{{this.status}}</td>
      <td>&#8377;{{this.total}}</td>
      <td><a href="/admin/deleteOrder?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.name}}')">X</a></td>
    </tr>
          {{/each}}
  </tbody>
</table>
    </div>
</section>
<style>
 @media(max-width:786px){
    section{
      font-size: 8px;
      
    }
  }
</style>